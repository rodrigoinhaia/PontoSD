# App
PORT=3000
NODE_ENV=development

# Database
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_DATABASE=pontosdigital_dev
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_key_must_be_at_least_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Geolocation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Configurações de Autenticação
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_must_be_at_least_32_characters
REFRESH_TOKEN_EXPIRES_IN=7d

# Configurações de Email
EMAIL_FROM=noreply@pontosd.com.br

# Configurações de Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880 # 5MB

# Configurações de Geolocalização
MAX_DISTANCE_METERS=100

# Configurações de Horário
TIMEZONE=America/Sao_Paulo
WORKING_HOURS_START=08:00
WORKING_HOURS_END=18:00
LUNCH_BREAK_START=12:00
LUNCH_BREAK_END=13:00

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# API URL
API_URL=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:3001
